<div class="page-header">
  <h1>
    Friends
    <a href="/friends/new" class="btn btn-lg btn-success">New Friend</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Friend</th>
        <th>Actions</th>
      </tr>

      <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.user.fullname %></td>
        <td>
          <a href="/friends/recipes/<%= friend.user.id %>" class="btn btn-primary">Recipes</a>
          <a href="/delete_friend/<%= friend.id %>" class="btn btn-danger" rel="nofollow">Remove Friend</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
