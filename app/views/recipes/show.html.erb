<div class="page-header">
  <h3>Recipe #<%= @recipe.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @recipe.user_id %></dd>

      <dt>Occassion</dt>
      <dd><%= @recipe.occassion %></dd>

      <dt>Rating</dt>
      <dd><%= @recipe.rating %></dd>

      <dt>Image</dt>
      <dd><%= @recipe.image %></dd>

      <dt>Preparation</dt>
      <dd><%= @recipe.preparation %></dd>

      <dt>Ingridients</dt>
      <dd><%= @recipe.ingridients %></dd>

      <dt>Description</dt>
      <dd><%= @recipe.description %></dd>

      <dt>Mealtype</dt>
      <dd><%= @recipe.mealtype %></dd>

      <dt>Cuisine</dt>
      <dd><%= @recipe.cuisine %></dd>

      <dt>Title</dt>
      <dd><%= @recipe.title %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/recipes" class="btn btn-primary">
        Back
      </a>
      <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_recipe/<%= @recipe.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
